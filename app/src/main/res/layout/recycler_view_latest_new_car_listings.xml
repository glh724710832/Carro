<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/main_recyclerview_background">


   <ImageView
       android:id="@+id/iv_recycler_latest_new_car_listings"
       android:layout_width="180dp"
       android:layout_height="180dp"
       android:layout_gravity="center"
       android:src="@mipmap/jeep"
       android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_recycler_type_latest_new_car_listings"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Hatchback"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_recycler_rp_latest_new_car_listings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="view 32 cars >"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/main_table_color2" />

            <TextView
                android:id="@+id/tv_recycler_qty_latest_new_car_listings"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Hatchback"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>






</LinearLayout>