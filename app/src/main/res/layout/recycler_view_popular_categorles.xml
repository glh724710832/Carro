<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_recyclerview_background"
    android:padding="20dp">


   <ImageView
       android:id="@+id/iv_recycler_popular_categprles"
       android:layout_width="180dp"
       android:layout_height="180dp"
       android:layout_gravity="center"
       android:src="@mipmap/b"
       android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_recycler_model_popular_categprles"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hatchback"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_recycler_cars_popular_categprles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="view 32 cars >"
            android:layout_gravity="center"
            android:textColor="@color/main_table_color2"
            android:paddingBottom="10dp"/>





</LinearLayout>